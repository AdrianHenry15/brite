generator client {
    provider = "prisma-client-js"
}

// Set your database connection URL
datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id         String    @id @default(auto()) @map("_id") @db.ObjectId
    phone      String?   @unique
    email      String    @unique
    name       String
    img        String
    role       String
    purchases  String?
    wishlist   String?
    discounts  String?
    addresses  Address[]
    created_at DateTime  @default(now())
}

model Component {
    id               String   @id @default(auto()) @map("_id") @db.ObjectId
    title            String
    content          String
    author           String
    img              String?
    nav_page         String?  @unique
    is_active        Boolean?
    background_color String?
    text_color       String?
    link             String?
    type             String?
    tags             String?
    created_at       DateTime @default(now())
    updated_at       DateTime @default(now())
}

// Address is an embedded document
type Address {
    street String
    city   String
    state  String
    zip    String
}
